@page
@model emallo1BAIS3150CodeSample.Pages.EnrollStudentModel
@{
    ViewData["Title"] = "BAIS3150 Code Sample";
}
@section scriptContent
    {
    <script type="text/javascript">
        function clearForm() {
            document.getElementById("EnrollStudentForm").reset();
            document.getElementById("StudentID").focus();
        }

    </script>
 }

@section headerContent
    {
    <table>
        <tr><td><h1>BAIS3150 Code Sample.......</h1></td><td><h3>[Enroll Student]</h3></td></tr>
    </table>
}

<form name="EnrollStudentForm" id="EnrollStudentForm" method="post">
    <table>
        <tr>
            <td>StudentID:</td>
            <td>
                <input type="text" asp-for="StudentID" id="StudentID" />
                <span asp-validation-for="StudentID"></span>
            </td>
        </tr>
        <tr>
            <td>FirstName:</td>
            <td>
                <input type="text" asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </td>

        </tr>
        <tr>
            <td>LastName:</td>
            <td>
                <input type="text" asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </td>

        </tr>
        <tr>
            <td>Email:</td>
            <td>
                <input type="email" name="Email" />
            </td>

        </tr>
        <tr>
            <td>ProgramCode:</td>
            <td>
                <input type="text" asp-for="ProgramCode" />
                <span asp-validation-for="ProgramCode"></span>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" name="Submit" value="Submit" />
            </td>
        </tr>
    </table>
</form>
@Model.Message
@if (Model.MessageResponse == true)
{
    <script type="text/javascript">
        clearForm();
        @ModelState.IsValid=false;
    </script>
}