@page
@model BAIST3150ASPNETCoreEmpty.Pages.ControlSampleModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Control Sample </title>
    </head>
    <body>
        <form name="ControlSampleForm" method="post" action="~/ViewHTTPRequest">
            <table>
                <tr>
                    <td>Text Box:</td>
                    <td>
                        <input type="text" name="TextBox" />
                    </td>
                </tr>
                <tr>
                    <td>Check Box:</td>
                    <td> 
                        <input type="checkbox" name="CheckBoxItem1" value="1" /> Item 1 <br />
                        <input type="checkbox" name="CheckBoxItem2" value="2" /> Item 2 <br />
                        <input type="checkbox" name="CheckBoxItem3" value="3" /> Item 3 <br />

                    </td>
                </tr>
                <tr>
                    <td>Radio Button:</td>
                    <td>
                        <input type="radio" name="RadioButon" value="1" /> Item 1<br />
                        <input type="radio" name="RadioButon" value="2" /> Item 2<br />
                        <input type="radio" name="RadioButon" value="3" /> Item 3<br />

                    </td>
                </tr>
                <tr>
                    <td>Hidden Field:</td>
                    <td>
                        <input type="hidden" name="HiddenField"  value="This is hidden" />
                    </td>
                </tr>
                <tr>
                    <td>Password Box:</td>
                    <td>
                        <input type="password" name="PasswordBox" />
                    </td>
                </tr>
                <tr>
                    <td>Scrolling TextBox:</td>
                    <td>
                    <textarea name="TextArea" cols="20" rows="5"></textarea>
                    </td>
                </tr>
                <tr>
                    <td>Select Element/Option Element Drop-Down List</td>
                    <td>
                        <select name="SelectElementDropDownList" size="1">
                            <option value="0"> Make a selection</option>
                            <option value="1"> Option 1</option>
                            <option value="2"> Option 2</option>
                            <option value="3"> Option 3</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Select Element/Option Element List:</td>
                    <td>
                        <select name="SelectElementList" size="3">
                            <option value="1"> Option 1</option>
                            <option value="2"> Option 2</option>
                            <option value="3"> Option 3</option>
                        </select>"
                    </td>
                </tr>
                <tr>
                    <td>
                        <!-- adjustment elements, click on label-->
                        <label> A Text Box Control Label:<input type="text" name="ATextBox" /> </label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <!-- associated elements, click on labale-->
                        <lable for="'AnotherTextBox">Another Text Box Control Label:</lable>
                        <input type="text" name="AnotherTextBox"  id="AnotherTextBox"/>
                    </td>
                </tr>
                <tr>
                    <td>FieldSet Element/Legend Element</td>
                    <td>
                        <fieldset name="Fieldset">
                            <Legend>Legend</Legend>
                            <label> Group Item 1: <input type="text" name="GroupItem1" /></label>
                            <br />
                            <label> Group Item 2: <input type="text" name="GroupItem2" /></label>
                            <br />
                            <label> Group Item 3: <input type="text" name="GroupItem3" /></label>
                            <br />
                    </fieldset>
                    </td>                    
                </tr>
                <td>
                    <input type="submit" name="Submit" value="Submit" />
                </td>
                <td>
                    <input type="reset" name="Reset" />
                </td>

            </table>
         </form>
    </body>
</html>
