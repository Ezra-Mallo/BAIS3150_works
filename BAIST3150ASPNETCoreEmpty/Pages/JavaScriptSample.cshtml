<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>JavaScript Sample</title>
    <script type="text/javascript">
        function isNumeric(aValue){ 
            //camelCase
            /* block comment */
            var length = aValue.length;
            var index = 0;
            var isValid = length > 0;
            for (index = 0; (index < length) && isValid; index++) {
                var aCharacter = aValue.charAt(index);
                if (aCharacter < '0' || aCharacter > '9') {
                    isValid = false;
                }
            }
            return isValid;
        }
        function addOneToField(aField){
            if (isNumeric(aField.value)) {
                aField.value = parseInt(aField.value) + 1;
            }
            else {
                alert('Field value must be numeric.');
                aField.focus();
                aField.select();
            }

        }

     </script>
</head>
<body>
    <form name="SampleForm">
        <p>
            Click this
            <!-- window.document.forms['Sample'].elements['Field']-->
            <input type="button" value="Button" onclick="addOneToField(window.document.SampleForm.Field);" />
            to incrememnt this
            <input type="text" name="Field" size="5" value="0" />
        </p>
    </form>
</body>
</html>