@page
@model BAIST3150ASPNETCoreEmpty.Pages.ValidationClientServerModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Validation Client Server</title>
        <script type="text/javascript">
            function isFormValid(aForm) {
                // validate - Client
                var isValid = false;
                var aValue = aForm.InputField.value;
                var length = aValue.length;

                if (length > 0 && length <= 5) {
                    isValid = true;
                }
                else {
                    // alert or set form control value
                    alert('Input Field is required and must contain up to 5 characters.');
                }

                // to bypass client side validation
                // -return true
                // -or
                //-<form> set onsubmit="Return true;"
                return isValid;
            }
        </script>
    </head>
    <body>
    <!--<form name="SampleForm" method="post" onsubmit="return isFormValid(window.document.SampleForm);">-->
      <form name="SampleForm" method="post" onsubmit="return true;">

            <table>
                <tr>
                    <td>Input Fields:  </td>
                    <td>
                        <input type="text" name="InputField" value="@Model.InputField" />
                        @Html.ValidationMessage("InputField")   <!-- TagHelper, view source in browser-->
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" name="Submit" value="Submit" />
                    </td>
                </tr>
            </table>
        </form>
    @Model.Message   <!-- could be anywhere-->
    </body>
</html>
