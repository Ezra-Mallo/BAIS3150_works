@page
@model BAIST3150ASPNETCoreEmpty.Pages.JavaScriptFormPostModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>JavaScript Form Post</title>
        <script type="text/javascript">
            function isFormValidViaSubmit(aForm){
                alert('Via OnSubmit -Input Field =' + aForm.InputField.value);
                //if valid return true,, else return false
                // return true;
                 return false
            }
            function isFormValidViaButton(aForm) {
                alert('Via Button - Input Field =' + aForm.InputField.value);
                //if if valid, then call submit()
                aForm.submit();
            }

        </script>
    </head>
    <body>
        <form name="SampleForm" method="post"  action="~/ViewHTTPRequest">
            <table>
                <tr>
                    <td>
                        <input type="text" name="InputField" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" name="Submit" value="Submit" />
                    </td>
                 </tr>
                 <tr>
                    <td>
                    <input type="button" name="Button" value="button" onclick="isFormValidViaButton(window.document.SampleForm);" />
                    </td> 
                </tr>
            </table>
        </form>
    </body>
</html>